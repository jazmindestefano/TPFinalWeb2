{{> header}}
<!-- The Band Section -->
<link rel="stylesheet" href="../public/css/partida.css">

<body >
<div class='w3-container w3-center'
     style='display: flex; justify-content: center; align-items: center; flex-direction: column; padding: 10px 0'
     id='band'>
    <h3 class='w3-wide'>JUGA TU PARTIDA</h3>

    {{#preguntas}}
        <h3 style="text-align: center">{{categoria}}</h3>
        <div class="{{categoria}}">
            <p style="font-weight: bold" id="pregunta">{{pregunta}}</p>
        </div>
    {{/preguntas}}
    <ul class="pregunta-respuestas">
        {{#respuestas}}

            <li class="pregunta-form">
                <a href="/partida/validar&id={{idRespuesta}}" class="opcion-respuesta">{{respuesta}}</a>
            </li>

        {{/respuestas}}
    </ul>


</div>

<div class="mensaje">
    {{#mensajeDeLaPartida}}
        <p style="text-align: center"> {{mensajeDePartida}}  </p>
        <p style="text-align: center"> Tu puntaje alcanzado es de: <span style="font-weight: bold">{{puntaje}}</span> </p>
    {{/mensajeDeLaPartida}}


</div>

<h1>Juego de preguntas y respuestas</h1>
<div id="question"></div>
<ul id="answers"></ul>
<button id="next" name="next" onclick="loadQuestion()">Siguiente</button>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="../public/js/preguntas.js"></script>
</body>
</html>
<!-- End Page Content -->

