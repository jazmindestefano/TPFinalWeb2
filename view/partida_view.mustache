{{> header}}
<!-- The Band Section -->
<link rel="stylesheet" href="../public/css/partida.css">
<div class='w3-container w3-center'
     style='display: flex; justify-content: center; align-items: center; flex-direction: column; padding: 10px 0'
     id='band'>
    <h3 class='w3-wide'>JUGA TU PARTIDA</h3>

    {{#preguntas}}
    <div class="partida-pregunta">
        <p>{{Pregunta}}</p>
    </div>

    <form action="#" method="post" class="pregunta-form">

        <ul>
                <li><input type="radio" name="respuestaDelUsuario" value="A">{{RespuestaA}}</li>
                <li><input type="radio" name="respuestaDelUsuario" value="B">{{RespuestaB}}</li>
                <li><input type="radio" name="respuestaDelUsuario" value="C">{{RespuestaC}}</li>
                <li><input type="radio" name="respuestaDelUsuario" value="D">{{RespuestaD}}</li>
        </ul>

        <button type="submit" class="partida-siguiente-button">Siguiente</button>
    </form>
    {{/preguntas}}

    <div class="mensaje">
        {{#mensaje}}
            {{mensaje}}
        {{/mensaje}}
    </div>

</div>

<!-- End Page Content -->
</div>
{{> footer}}