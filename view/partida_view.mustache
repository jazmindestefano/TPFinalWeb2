{{> header}}
<!-- The Band Section -->
<link rel="stylesheet" href="../public/css/partida.css">

<div class='w3-container w3-center'
     style='display: flex; justify-content: center; align-items: center; flex-direction: column; padding: 10px 0'
     id='band'>
    <h3 class='w3-wide'>JUGA TU PARTIDA</h3>

    {{#preguntas}}
    <div class="partida-pregunta">
        <p>{{pregunta}}</p>
    </div>
    {{/preguntas}}
        <ul class="pregunta-respuestas">
            {{#respuestas}}
            <li>
                <label class="opcion-respuesta">
                    <input type="radio" name="respuestaDelUsuario" value="A">
                    <a href="/partida/validar&id={{idRespuesta}}"  class="respuesta-texto">{{respuesta}}</a>
                </label>
            </li>
            {{/respuestas}}
        </ul>


</div>

<div class="mensaje">
{{#mensajeDeLaPartida}}
  <p> {{mensajeDePartida}}  </p>
{{/mensajeDeLaPartida}}

</div>

<!-- End Page Content -->

{{> footer}}