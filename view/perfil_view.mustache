{{> header}}
<main>
<div class="header">
    <img class="avatar" src="{{fotoDePerfil}}" alt="">
    {{#miPerfil}}

        <h1 class="user-name"> {{username}}</h1>
        <p class="rol">rol: {{rol}}</p>
    </div>

        <div class="data-profile">
            <div class="mapa">
                <p>Ubicación: </p>
                <iframe
                        width="300"
                        height="200"
                        style="border:0"
                        loading="lazy"
                        allowfullscreen
                        referrerpolicy="no-referrer-when-downgrade"
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAxP6xiQEPFAMcksSmK-ZmzUdGZbo5rukI&q={{ubicacion}}
                ">
                </iframe>
            </div>
            <div>
                <p>Nombre: {{nombreCompleto}}</p>
                <p>Fecha de nacimiento: {{fechaDeNacimiento}}</p>
                <p>Sexo: {{sexo}}</p>
                <p>Email: {{mail}}</p>

            </div>


            <div class="qrCont">
                <img src="/public/qr.php?id={{idUsuario}}" />
            </div>

        </div>

    {{/miPerfil}}

    {{#otroPerfil}}

        <h1 class="user-name"> {{username}}</h1>
        <p class="rol">rol: {{rol}}</p>
        </div>

        <div class="data-profile">
            <div class="mapa">
                <p>Ubicación: </p>
                <iframe
                        width="300"
                        height="200"
                        style="border:0"
                        loading="lazy"
                        allowfullscreen
                        referrerpolicy="no-referrer-when-downgrade"
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAxP6xiQEPFAMcksSmK-ZmzUdGZbo5rukI&q={{ubicacion}}
                ">
                </iframe>
            </div>
            <div>
                <p>Nombre: {{nombreCompleto}}</p>
                <p>Fecha de nacimiento: {{fechaDeNacimiento}}</p>
                <p>Sexo: {{sexo}}</p>
                <p>Email: {{mail}}</p>

            </div>


            <div class="qrCont">
                <img src="/public/qr.php?id={{idUsuario}}" />
            </div>

        </div>

    {{/otroPerfil}}

</main>

<style>


    .header {
        text-align: center;
        padding: 12px;
        background: #ff0054;

    }

    .mapa {
        padding: 2rem 0rem;

    }

    .qrCont {
        width: 300px;
        height: 200px;
    }

    .avatar {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background: white;
        border: 4px solid black;
    }

    .data-profile {

        display: flex;
        justify-content: space-around;
        align-items: center;
        flex-direction: row;

    }

    .user-name {
        font-size: 18px;
        margin-top: 14px;
        color: #fff;
    }

    .rol {
        color: white;
        background: #000;
        border-radius: 55px;
        display: inline;
        padding: 5px 25px;

    }


</style>
{{> footer}}
