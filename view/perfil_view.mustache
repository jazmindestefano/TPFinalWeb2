{{> header}}
<main>
    <link rel="stylesheet" href="../public/css/perfil.css">
<div class="header">
    {{#miPerfil}}
        <img class="avatar" src="../public/images/{{username}}.png" alt="{{username}}">
        <h1 class="user-name"> {{username}}</h1>
            <p class="rol">Rol: {{rol}}</p>
            <a href="/editor/list" class="rol" style="cursor: pointer; {{^esEditor}} display: none; {{/esEditor}}" >Administrar preguntas</a>
    </div>

        <div class="data-profile">
            <div class="qrContainer">
                <img class="qr" src="/public/qr.php?id={{idUsuario}}" />
            </div>
            <div class="infoCont">
                <input class="inputInfo" readonly value="Nombre: {{nombreCompleto}}"/>
                <input class="inputInfo" readonly value="Fecha de nacimiento: {{fechaDeNacimiento}}"/>
                <input class="inputInfo" readonly value="Sexo: {{sexo}}"/>
                <input class="inputInfo" readonly value="Email: {{mail}}"/>
            </div>

            <div class="mapContainer">
                <iframe
                        width="100%"
                        height="400"
                        style="border:0"
                        loading="lazy"
                        allowfullscreen
                        referrerpolicy="no-referrer-when-downgrade"
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAxP6xiQEPFAMcksSmK-ZmzUdGZbo5rukI&q={{ubicacion}}
                ">
                </iframe>
            </div>
        </div>

    {{/miPerfil}}

    {{#otroPerfil}}
        <img class="avatar" src="../public/images/{{username}}.png" alt="{{username}}">
        <h1 class="user-name"> {{username}}</h1>
        <p class="rol">Rol: {{rol}}</p>
        </div>

        <div class="data-profile">
            <div class="qrContainer">
                <img class="qr" src="/public/qr.php?id={{idUsuario}}" />
            </div>
            <div class="infoCont">
                <input class="inputInfo" readonly value="Nombre: {{nombreCompleto}}"/>
                <input class="inputInfo" readonly value="Fecha de nacimiento: {{fechaDeNacimiento}}"/>
                <input class="inputInfo" readonly value="Sexo: {{sexo}}"/>
                <input class="inputInfo" readonly value="Email: {{mail}}"/>
            </div>

            <div class="mapContainer">
                <iframe
                        width="100%"
                        height="400"
                        style="border:0"
                        loading="lazy"
                        allowfullscreen
                        referrerpolicy="no-referrer-when-downgrade"
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAxP6xiQEPFAMcksSmK-ZmzUdGZbo5rukI&q={{ubicacion}}
                ">
                </iframe>
            </div>
        </div>

    {{/otroPerfil}}

</main>
