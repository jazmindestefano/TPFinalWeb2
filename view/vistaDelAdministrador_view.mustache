{{> header}}
<body>
<br>
<h1 style="text-align: center">Graficas</h1>
<main>
    <div id="edadUsuariosChart" style="width: 900px; height: 500px;"></div>
</main>


</body>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

        var data = google.visualization.arrayToDataTable([
            ['Usuario', 'Cantidad'],
            ['Menores',     {{cantUsuariosMenores}}],
            ['Mayores',     {{cantUsuariosMayores}}],
            ['Jubilados',   {{cantUsuariosJubilados}}],

        ]);

        var options = {
            title: 'Usuarios por Edad'
        };

        var chart = new google.visualization.PieChart(document.getElementById('edadUsuariosChart'));

        chart.draw(data, options);
    }
</script>

</html>